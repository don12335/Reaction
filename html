  <div id="container">
    <div id="status">è«‹è¼¸å…¥æš±ç¨±ï¼Œç„¶å¾Œé»æ“Šé–‹å§‹æ¸¬è©¦ä½ çš„åæ‡‰é€Ÿåº¦</div>
    <input type="text" id="nicknameInput" maxlength="20" placeholder="è«‹è¼¸å…¥æš±ç¨± (æœ€å¤š20å­—)" />
    <button id="startBtn">é–‹å§‹æ¸¬è©¦</button>
    <div id="result"></div>
    <div id="best"></div>

    <div id="leaderboard">
      <h3>æ’è¡Œæ¦œï¼ˆå‰ 100 åæœ€å¿«ï¼‰</h3>
      <ol id="leaderboardList"></ol>
    </div>
  </div>

<script>
  const status = document.getElementById("status");
  const startBtn = document.getElementById("startBtn");
  const result = document.getElementById("result");
  const best = document.getElementById("best");
  const leaderboardList = document.getElementById("leaderboardList");
  const nicknameInput = document.getElementById("nicknameInput");

  let timeoutId = null;
  let startTime = 0;
  let waiting = false;

  // è®€å–æ’è¡Œæ¦œï¼ˆé™£åˆ—ï¼‰å’Œæœ€ä½³æˆç¸¾
  // æ’è¡Œæ¦œé™£åˆ—æ ¼å¼ï¼š[ {name: 'æš±ç¨±', time: 123}, ... ]
  let leaderboard = JSON.parse(localStorage.getItem("leaderboard")) || [];

  function updateLeaderboardUI() {
    leaderboardList.innerHTML = "";
    if (leaderboard.length === 0) {
      leaderboardList.innerHTML = "<li>ç›®å‰é‚„æ²’æœ‰ç´€éŒ„</li>";
      best.textContent = "é‚„æ²’æœ‰ç´€éŒ„æœ€ä½³æˆç¸¾";
      return;
    }
    leaderboard.forEach((entry, index) => {
      const li = document.createElement("li");
      li.textContent = `${index + 1}. ${entry.name} â€” ${entry.time} ms`;
      leaderboardList.appendChild(li);
    });
    best.textContent = `æœ€ä½³æˆç¸¾ï¼š${leaderboard[0].time} ms ğŸ‰ (${leaderboard[0].name})`;
  }

  updateLeaderboardUI();

  startBtn.addEventListener("click", () => {
    const nickname = nicknameInput.value.trim();
    if (!nickname) {
      alert("è«‹è¼¸å…¥æš±ç¨±ï¼");
      nicknameInput.focus();
      return;
    }
    if (nickname.length > 20) {
      alert("æš±ç¨±ä¸å¯è¶…é20å­—ï¼");
      nicknameInput.focus();
      return;
    }

    startBtn.disabled = true;
    result.textContent = "";
    status.textContent = "è«‹ç­‰å¾…ç•«é¢è®Šç¶ ...";
    status.style.color = "#eee";
    waiting = true;

    const wait = Math.floor(Math.random() * 3000) + 2000; // 2~5ç§’éš¨æ©Ÿç­‰å¾…
    timeoutId = setTimeout(() => {
      status.textContent = "ç¾åœ¨ï¼å¿«é»æ“Šï¼";
      status.style.color = "#0f0";
      startTime = Date.now();
      waiting = false;
    }, wait);
  });

  document.body.addEventListener("click", (e) => {
    if (e.target === startBtn || e.target === nicknameInput) return;
    if (waiting) {
      clearTimeout(timeoutId);
      status.textContent = "å¤ªæ—©é»äº†ï¼å†è©¦ä¸€æ¬¡...";
      status.style.color = "#f00";
      startBtn.disabled = false;
      waiting = false;
    } else if (startTime > 0) {
      const reactionTime = Date.now() - startTime;
      result.textContent = `ä½ çš„åæ‡‰æ™‚é–“æ˜¯ ${reactionTime} æ¯«ç§’`;

      // åªåŠ å…¥æ’è¡Œæ¦œå¦‚æœæœ‰æš±ç¨±
      const nickname = nicknameInput.value.trim();
      if (nickname) {
        // åŠ å…¥æ’è¡Œæ¦œ
        leaderboard.push({ name: nickname, time: reactionTime });
        // æ’åº
        leaderboard.sort((a, b) => a.time - b.time);
        // ä¿ç•™æœ€å¤š100å
        if (leaderboard.length > 100) leaderboard.pop();
        // å„²å­˜
        localStorage.setItem("leaderboard", JSON.stringify(leaderboard));
        updateLeaderboardUI();
      }

      status.textContent = "é»æ“Šé–‹å§‹å†æŒ‘æˆ°ä¸€æ¬¡ï¼";
      status.style.color = "#eee";
      startTime = 0;
      startBtn.disabled = false;
    }
  });
</script>
